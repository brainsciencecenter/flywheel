#!/bin/bash

# syncs NACC-SC AshsHarP reports to INDD

# Assumptions
# + Only 3T reports are looked for
# + Each session only has a since analysis.  It is possible to run multiple analyses, but there is only room in the INDD for one of them.
# 

cmd=$(basename "$0")

syntax="$cmd [-f inddreporttofilter][-g gear][-n][-v] Group/Project"

function sys {
	  [ -n "${opt_n}${opt_v}" ] && echo "$cmd : $@" 1>&2
	  [ -n "$opt_n" ] || "$@"
}

opt_f='xxxxx'

while getopts f:g:nv arg
do
	case "$arg" in
	     f|g|n|v)
		eval "opt_${arg}=${OPTARG:=1}"
		;;
	esac
done

shift $(($OPTIND - 1))

if [ -n "$opt_g" ]
then
   Gear="$opt_g"
else
   Gear=ashsharpicv
fi

if [ -n "$1" ]
then
	GroupProject="$1"
else
	GroupProject="dwolklab/NACC-SC"
fi

INDDToc=$(mktemp /tmp/${cmd}Toc-XXXXX)

smbClientWrapper //cndr-indd.uphs.pennhealth.prv/mrireport -c dir 2> /dev/null | awk '{print $1}' | grep -P '^\d{6}([\._x]\d{2})?[_x]\d{8}([_x]3T)?.pdf$' | sort  | grep -v "$opt_f" > "$INDDToc"
smbClientWrapper //cndr-indd.uphs.pennhealth.prv/mrireport -c dir 2> /dev/null | awk '{print $1}' | grep -P '.pdf$' | sort -u > "$INDDToc"

[ -n "${opt_n}${opt_v}" ] && echo "$cmd : Got list of INDD reports" 1>&2

FWReportPdfs=$(getFWProjectAnalyses -g "$Gear" "$GroupProject" | grep '.pdf$' | awk '{print $2}' | sort -u)

[ -n "${opt_n}${opt_v}" ] && echo "$cmd : Got list of Flywheel reports from $GroupProject" 1>&2

# Sometimes there can be multiple analyses run on the same session so we want the sort -u to prevent unneeded downloads
ReportsToDownload=$(diff <(echo "$FwReportPdfs") "$INDDToc" | grep '<' | cut -f 2 -d ' ')

echo "$ReportsToDownload"

exit

